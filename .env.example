# QuantSage Environment Configuration
# Copy this file to .env and fill in your actual values

# Cryptocurrency Exchange API Keys (Coinbase)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

# Stock Trading API Keys (Alpaca - for future use)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_api_secret_here
ALPACA_PAPER_TRADING=true  # Use paper trading account

# Database Configuration (SQLite - no configuration needed)
# DB_PATH=data/quantsage.db  # Default path

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# System Mode
SYSTEM_MODE=backtest  # backtest, paper, live

# Monitoring & Alerts
ALERT_EMAIL=your_email@example.com  # For future alert system
